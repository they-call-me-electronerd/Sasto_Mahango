# SastoMahango Environment Configuration
# XAMPP Development Configuration

# Environment
APP_ENV=development
APP_DEBUG=true

# Database Configuration (XAMPP defaults)
DB_HOST=localhost
DB_NAME=sastomahango_db
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# Site Configuration
SITE_NAME=SastoMahango
SITE_URL=http://localhost/MulyaSuchi
SITE_EMAIL=contact@sastomahango.com

# Security
SESSION_LIFETIME=3600
CSRF_TOKEN_NAME=csrf_token
PASSWORD_MIN_LENGTH=8

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=assets/uploads/items/

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_DECAY_MINUTES=15
